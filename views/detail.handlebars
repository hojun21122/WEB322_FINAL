<div class="hero-section2">
    <nav>
        <h1>Try our meals!</h1>
        <br>
        <br>
    </nav>
</div>
<div class="detail">
   <ul>
            {{#each data}}
                <li>
                    
                    <img class="editimg" src=/images/{{this.imagePath}} ><br>
                    <a class="title">{{this.title}}<br></a>
                    <a class="foodcategory">(category: {{this.foodcategory}}) <br></a>
                    <a class="synopsis">{{this.synopsis}} <br></a>
                    {{#if this.toppackge}}
                        <button class="toppackage" style="background-color: rgb(224, 9, 128);">Top package !!!</button><br>
                    {{else}}
                        <button class="toppackage" style="background-color: rgb(0, 42, 121);">Regular package</button><br>
                    {{/if}}
                    <a class="price">From: {{this.price}} </a><br>
                    <a class="num">Number in Stock: {{this.num}} </a><br>
                    <form action="/detail" method="POST">
                        <a>Enter the Number of meals: <input type="number" id="quantity" name="quantity" min="1" max="{{this.num}}" onKeyDown="return false"></a>
                        <input type="submit" value="add to cart">
                        <input type="hidden" id="title" name="title" value="{{this.title}}">
                    </form>
                    
                </li>
            {{/each}}
        </ul>
</div>