<div class="hero-section2">
    <nav>
        <h1>Our meal packages</h1>
        <br>
    </nav>
</div>
<div class="mealDesc">
<a style="font-weight: lighter;">Pick a package, choose your meals, achieve your goal -</a><a style="font-weight: bold;">  it's that easy!</a></div>


<div class = "mealcontainer">
   <ul>
            {{#each data}}
                <li>
                    <a href="/detail/{{this.title}}"> <img src=/images/{{this.imagePath}}> </a><br>
                    <a href="/detail/{{this.title}}" class="title">{{this.title}} <br></a>
                    <a href="/detail/{{this.title}}" class="foodcategory">(category: {{this.foodcategory}}) <br></a>
                    <a href="/detail/{{this.title}}" class="synopsis">{{this.synopsis}} <br></a>
                    {{#if this.toppackge}}
                        <button class="toppackage" style="background-color: rgb(224, 9, 128);">Top package !!!</button><br>
                    {{else}}
                        <button class="toppackage" style="background-color: rgb(0, 42, 121);">Regular package</button><br>
                    {{/if}}
                    
                    <a class="price">From: {{this.price}} </a>
                </li>
            {{/each}}
        </ul>
</div>
