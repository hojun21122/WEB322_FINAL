<div class = "mealcontainer">
   <ul>
            {{#each data}}
                <li>
                    <a href="/editdata/{{this.title}}"><img  href="/editdata/{{this.title}}" src=/images/{{this.imagePath}} ></a><br>
                    <a href="/editdata/{{this.title}}" class="title">{{this.title}} <br></a>
                    <a href="/editdata/{{this.title}}"class="foodcategory">(category: {{this.foodcategory}}) <br></a>
                    <a href="/editdata/{{this.title}}" class="synopsis">{{this.synopsis}} <br></a>
                    {{#if this.toppackge}}
                        <button class="toppackage" style="background-color: rgb(224, 9, 128);">Top package !!!</button><br>
                    {{else}}
                        <button class="toppackage" style="background-color: rgb(0, 42, 121);">Regular package</button><br>
                    {{/if}}
                    
                    <a href="/editdata/{{this.title}}"class="price">From: {{this.price}} </a>
                </li>
            {{/each}}
        </ul>
</div>